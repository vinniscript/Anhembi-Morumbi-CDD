package Atividade1;

import java.util.Scanner;

public class testes {

	public static void main(String[] args) {

Scanner scanner = new Scanner (System.in);
		
System.out.print("Insira uma temperatura em Celsius: ");
double celso = scanner.nextInt();
double rodrigoFarenheint = (celso * 1.8) + 32;
System.out.printf("%.0f%sc, %.2f%sf", celso, "°", rodrigoFarenheint, "°");

	}

}
