package Atividade1;

import java.util.Scanner;
import java.util.Locale;

public class testes {

	public static void main(String[] args) {


Scanner scanner = new Scanner (System.in);

//Converter KM/h para ms/h (Km/h / 3,6).

System.out.println("Insira uma valor em quil√¥metros: ");

float kms = scanner.nextFloat();
float conversaoKm = kms / 3,6;

System.out.printf("%.1fKm/h, convertido para metros: %.1fm/s", kms, conversaoKm);


	}

}
